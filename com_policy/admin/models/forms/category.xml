<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset>
        <field name="category_id"
               type="hidden"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0"
               readonly="true"
               class="readonly"
        />

        <field name="category_title"
               type="text"
               label="COM_POLICY_FIELD_CATEGORY_TITLE_LABEL"
               description="COM_POLICY_FIELD_CATEGORY_TITLE_DESC"
               class="inputbox"
               size="50"
               required="true"
        />

        <field name="category_alias"
               type="text"
               label="JFIELD_ALIAS_LABEL"
               description="JFIELD_ALIAS_DESC"
               size="50"
               required="false"
        />

        <field name="published"
               type="list"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               class="inputbox"
               filter="intcal"
               size="1"
               default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>
